@model WebFin.Models.JobPost

@{
    ViewData["Title"] = "Create Job Post";
}

<h2>Create a New Job Post</h2>

<form method="post">
    <label>Title:</label>
    <input type="text" name="Title" required />

    <label>Description:</label>
    <textarea name="Description" required></textarea>

    <label>Company:</label>
    <input type="text" name="CompanyId" required />

    <label>City:</label>
    <input type="text" name="CityId" required />

    <label>Category:</label>
    <input type="text" name="CategoryId" required />

    <button type="submit">Create</button>
</form>
