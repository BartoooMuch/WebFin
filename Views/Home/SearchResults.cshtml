@{
    ViewData["Title"] = "Arama Sonuçları";
}
<div class="container">
    <h2>Arama Sonuçları</h2>

    <div class="row">
        <div class="col-md-3">
            <h5>Filtreler</h5>
            <label><input type="checkbox" class="filter-checkbox" value="remote"> Remote</label>
            <label><input type="checkbox" class="filter-checkbox" value="fulltime"> Tam Zamanlı</label>
        </div>

        <div class="col-md-9" id="jobResults">
            @foreach (var job in Model)
            {
                <div class="card">
                    <h3>@job.Title</h3>
                    <p>@job.Description</p>
                    <a href="/Jobpost/Details/@job.Id" class="btn btn-primary">Detaylar</a>
                </div>
            }
        </div>
    </div>
</div>
